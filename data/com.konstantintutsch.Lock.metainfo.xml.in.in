<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>@project_id@</id>
    <metadata_license>CC-BY-SA-4.0</metadata_license>
    <project_license>MIT</project_license>
    <name>Lock</name>
    <summary>Process data with GnuPG</summary>
    <description>
        <p>Lock is a graphical front-end for GnuPG (GPG) making use of a beautiful LibAdwaita GUI.</p>
        <p>Process text and files:</p>
        <ul>
            <li>Encryption</li>
            <li>Decryption</li>
            <li>Signing</li>
            <li>Verification</li>
        </ul>
        <p>Manage your GnuPG keyring:</p>
        <ul>
            <li>Generate new keypairs</li>
            <li>Import keys</li>
            <li>Export public keys</li>
            <li>View expiry dates</li>
            <li>Remove keys</li>
        </ul>
    </description>
    <launchable type="desktop-id">@project_id@.desktop</launchable>
    <categories>
        <category>Utility</category>
    </categories>
    <content_rating type="oars-1.1" />
    <url type="homepage">https://konstantintutsch.com/Lock</url>
